@model Cart

<div>
    <h4>Корзина</h4>

    <table class="table table-bordered table-striped">
        <thead>
            <tr><th>Quantity</th><th>Item</th><th class="text-right">Price</th><th class="text-right">Subtotal</th></tr>
        </thead>
        <tbody>
            @foreach (var line in Model.Lines)
            {
                <tr>
                    <td class="text-center">@line.Quantity</td>
                    <td class="text-center">@line.Product?.Name</td>
                    <td class="text-right">@line.Product?.Price.ToString("c")</td>
                    <td class="text-right">
                        @((line.Quantity * line.Product?.Price)?.ToString("c"))
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="3" class="text-center">Total:</td>
                <td class="text-right">
                    @Model.ComputeTotalSum().ToString("c")
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-center">
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">Продолжить покупки</a>
    </div>
</div>
